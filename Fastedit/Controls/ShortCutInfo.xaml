<UserControl
    x:Class="Fastedit.Controls.ShortCutInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" SizeChanged="UserControl_SizeChanged">

    <Grid HorizontalAlignment="Left">
        <TextBlock HorizontalAlignment="Left" Width="200" Margin="5" x:Name="display" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Width="300" Margin="310,5,5,5" x:Name="displayOnPress" FontSize="14"/>
    </Grid>
</UserControl>
